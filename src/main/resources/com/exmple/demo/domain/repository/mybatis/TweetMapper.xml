<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.domain.repository.mybatis.TweetMapper">    
   <resultMap type="com.example.demo.domain.model.Tweet" id="tweet">
	  <id column="id" property="id" />
	  <result column="text" property="text" />
	  <result column="authorities_id" property="authorities_id" />
   </resultMap>

   <insert id="insert" parameterType="com.example.demo.domain.model.Tweet">
        INSERT INTO tweet (
            text,
            authorities_id)
        VALUES (
            #{text},
            #{id})
    </insert>
</mapper>